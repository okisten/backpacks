<?xml version="1.0"?>
<config>
    <tabs>
        <ciklum translate="label" module="ciklum_all">
            <label>Ciklum</label>
            <sort_order>100</sort_order>
        </ciklum>
    </tabs>
    <sections>
        <ciklum_all translate="label"  module="ciklum_all">
            <label>Ciklum All</label>
            <tab>ciklum</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label"  module="ciklum_all">
                  <label>Default Ciklum modules settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <notifications translate="label"  module="ciklum_all">
                            <label>Receive notifications from Ciklum</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </notifications>
                        <use_own_jquery_on_frontend translate="label"  module="ciklum_all">
                            <label>Use own jquery lib for frontend</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_own_jquery_on_frontend>
                        <use_own_jquery_on_backend translate="label" module="ciklum_all">
                            <label>Use own jquery lib for backend</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_own_jquery_on_backend>
                    </fields>
                </settings>
            </groups>
        </ciklum_all>
    </sections>
</config>
